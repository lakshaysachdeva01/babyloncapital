                <script>
                  document.addEventListener("DOMContentLoaded", function () {
                    const inDate = document.querySelector('input[name="<%= SERVICE_ENQUIRY_DYNAMIC_FIELDS_KEYS.indate %>"]');
                    const outDate = document.querySelector('input[name="<%= SERVICE_ENQUIRY_DYNAMIC_FIELDS_KEYS.outdate %>"]');
                
                    function validateDates() {
                        const today = new Date().toISOString().split("T")[0]; // Get today's date in YYYY-MM-DD format
                        inDate.setAttribute("min", today);
                        outDate.setAttribute("min", today);
                
                        if (inDate.value) {
                            outDate.setAttribute("min", inDate.value); // Ensure outDate is after inDate
                        }
                
                        if (outDate.value && outDate.value <= inDate.value) {
                            alert("Check-Out Date must be after Check-In Date.");
                            outDate.value = ""; // Reset outDate if invalid
                        }
                    }
                
                    inDate.addEventListener("change", validateDates);
                    outDate.addEventListener("change", validateDates);
                });
                
                </script>
